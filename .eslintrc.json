{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["plugin:jest/recommended"],
  "globals": {
    "Atomics": "readonly",
    "process": true,
    "jest": true,
    "__dirname": true,
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-var": "warn",
    "no-unused-vars": "warn",
    "camelcase": "warn",
    "no-debugger": "error",
    "no-unreachable": "warn",
    "no-label-var": "warn",
    "sort-imports": "warn"
  },
  "plugins": ["jest"]
}
